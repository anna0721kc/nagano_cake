<!--public/配送先登録・一覧画面-->
<div class="container my-3">
  <div class="row">
  <h2>配送先登録／一覧</h2>
</div>
<div class="offset-1">
  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td>郵便番号（ハイフンなし）</td>
        <td><%= f.text_field :postal_code, placeholder:"1234567", class:"form_width" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木12-34", class:"form_address" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, placeholder:"長野恵子", class:"form_width" %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit'新規登録',class: 'btn btn-success' %>
  <% end %>
<table class="table table-bordered mt-5">
  <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %><!--customerとaddressモデルは紐付けてある-->
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success ml-3" %>
          <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
        </td>
        </tr>
      <% end %>
      </tbody>
    </thead>
  </table>
</div>
</div>