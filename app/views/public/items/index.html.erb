<!--public/商品一覧画面-->
<div class="container my-3">
  <div class="row mb-3">
  <h2>
    商品一覧
    <span class="item_count">全<%= Item.where(is_active: "販売可").count %>件</span>
  </h2>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-3 mb-5">
      <%= link_to item_path(item.id) do  %>
      <%= attachment_image_tag item, :image, :fill, 200, 170, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %></br>
      <%= item.name %></br>
      ￥<%= (item.price * 1.1).floor %>
    </div>
    <% end %>
  </div>
  <div class="page text-center">
    <%= paginate @items %>
    </div>
</div>