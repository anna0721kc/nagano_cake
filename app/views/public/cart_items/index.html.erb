<!--public/カート一覧-->
<div class="container my-3">
    <div class="row">
    <h2>ショッピングカート</h2>

    <div class="ml-auto p-0">
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当にカート内をすべて消しますか？" %>
    </div>
    </div>
    <div class="row my-3">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <td>商品名</td>
                    <td>単価（税込）</td>
                    <td>数量</td>
                    <td>小計</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <!--each文ここから-->
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, format: 'jpeg', fallback:"no_image.jpeg" %>
                        <%= cart_item.item.name %>
                    </td>
                    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true do |f| %>
                        <%= f.select :amount, *[1..10] %>
                        <%= f.submit '変更',class: 'btn btn-success' %>
                        <% end %>
                    </td>

                    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                    <% @sum += cart_item.subtotal %>
                    <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %></td>
                </tr>
                <% end %>
                <!--each文ここまで-->
            </tbody>
        </table>
        <table class="table table-hover table-bordered col-3 ml-auto">
            <tr>
                <td>合計金額</td>
                <td><%= @sum.to_s(:delimited) %></td>
            </tr>
        </table>
    </div>
    <div class="row mr-auto">
            <%= link_to "買い物を続ける", root_path, class: 'btn btn-info' %>
    </div>
    <div class="text-center">
            <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %>
    </div>
</div>