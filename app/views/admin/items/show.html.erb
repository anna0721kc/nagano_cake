<div class="container my-5">
<h2>商品詳細</h2>
</div>
<div class="row mt-3">
    <div class="offset-sm-1 col-sm-3">
    <%= attachment_image_tag @item, :image, :fill, 250, 200, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>
    <div class="col-sm-6">
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @item.genre.name %></td>
                </tr>
                <tr>
                    <td>
                        税込価格<br/>
                        (税抜価格)
                    </td>
                    <td>
                        <%= @item.with_tax_price.to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円
                    </td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= @item.is_active ? '販売中' : '売切れ' %></td>
                </tr>
            </tbody>
        </table>
    <div class="row">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
    </div>